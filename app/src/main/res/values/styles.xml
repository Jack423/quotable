<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:colorForeground">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="cardViewStyle">@style/CardView.Light</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <style name="AppTheme.Text.Large" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/icons</item>
    </style>

    <style name="AppTheme.Text.ProfileCounter" parent="AlertDialog.AppCompat.Light">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryTextColor</item>
        <item name="android:colorBackground">@color/primaryColor</item>
        <!-- <item name="android:buttonStyle">@style/LoginTheme.Button</item> -->
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>




</resources>
