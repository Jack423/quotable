<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- User avatar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/post_user_height"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="@dimen/post_user_avatar_size"
                    android:layout_height="@dimen/post_user_avatar_size"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:elevation="2dp"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="16dp">

                    <TextView
                        android:id="@+id/tv_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textSize="@dimen/post_sub_text_size" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sub heading"
                        android:textSize="@dimen/post_sub_text_size" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_quote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="Quote" />

            <!-- User Actions -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingRight="8dp">

                    <ImageButton
                        android:id="@+id/iv_bookmark"
                        android:layout_width="@dimen/post_action_icon_height"
                        android:layout_height="@dimen/post_action_icon_height"
                        android:layout_marginEnd="@dimen/post_action_margin"
                        android:layout_marginStart="@dimen/post_action_margin"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/ic_bookmark_black_24dp" />

                    <TextView
                        android:id="@+id/bookmark_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/iv_comment"
                        android:layout_width="@dimen/post_action_icon_height"
                        android:layout_height="@dimen/post_action_icon_height"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/ic_chat_black_24dp" />

                    <TextView
                        android:id="@+id/comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>